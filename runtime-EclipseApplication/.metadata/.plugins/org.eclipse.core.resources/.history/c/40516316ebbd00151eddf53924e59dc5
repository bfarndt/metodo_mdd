			if (isSet($_GET['nome'])) {
				$nome = $_GET["nome"];
				$Paciente->setNome($nome);
			}
		
	
		
		
			$cpf = "";
			if (isSet($_GET['cpf'])) {
				$cpf = $_GET["cpf"];
				$Paciente->setCpf($cpf);
			}
		
	
		
		
			$data_nasc = "";
			if (isSet($_GET['data_nasc'])) {
				$data_nasc = $_GET["data_nasc"];
				$Paciente->setData_nasc($data_nasc);
